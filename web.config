<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Configuração para Single Page Applications (SPA) -->
    <rewrite>
      <rules>
        <!-- Regra para servir arquivos estáticos normalmente -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^(.*\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|map|json))$" />
          <action type="None" />
        </rule>
        
        <!-- Regra para APIs - redirecionar para backend -->
        <rule name="API Proxy" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="http://localhost:3001/api/{R:1}" />
        </rule>
        
        <!-- Regra principal: Fallback para index.html (SPA routing) -->
        <rule name="SPA Fallback" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Não é um arquivo físico -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Não é um diretório físico -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Não é uma API call -->
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Headers para melhor performance e CORS -->
    <httpProtocol>
      <customHeaders>
        <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
        <add name="Pragma" value="no-cache" />
        <add name="Expires" value="0" />
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
      </customHeaders>
    </httpProtocol>
    
    <!-- REMOVIDO: staticContent para evitar conflitos de mimeMap duplicados -->
    <!-- O IIS moderno já tem mimeMaps padrão para .js, .css, .json, etc. -->
    <!-- Adicionar novamente causa erro HTTP 500.19 -->
    
    <!-- Configuração padrão para SPAs -->
    <defaultDocument>
      <files>
        <add value="index.html" />
      </files>
    </defaultDocument>
    
    <!-- Configurações de erro customizadas -->
    <httpErrors errorMode="Custom" defaultResponseMode="File">
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="/index.html" responseMode="ExecuteURL" />
    </httpErrors>
  </system.webServer>
</configuration>
